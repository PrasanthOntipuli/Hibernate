<!DOCTYPE hibernate-configuration PUBLIC
      "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
      "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- SQL Dialect -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- Database Connection Settings -->
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Prasanth</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">Tibil123!@#</property>
		<property name="show_sql">false</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
		
	
		<!--  Mapping With Model Class Containing Annotations  -->
		<mapping class="com.prasanth.model.Employee"  />
		<mapping class="com.prasanth.model.Resource"  />
	  	<mapping class="com.prasanth.model.Address"   />
		<mapping class="com.prasanth.model.Desktop"   />
		<mapping class="com.prasanth.model.Vechile"   />
		<mapping class="com.prasanth.model.Login"     /> 
		
	<!-- ::::::::::::::::::::::::::::::::::::::::::::::::::::: -->
		 
		 <!--  mapping through the entire pakage name -->
		 
		   
		
	</session-factory>
</hibernate-configuration>